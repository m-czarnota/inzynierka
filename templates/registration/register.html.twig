{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div id="register-container" class="col-12 small-container">
        <div id="form-register" class="col-12 small-container-body">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1>Register</h1>

{#            {% form_theme form_theme 'form_theme/form_override.html.twig' %}#}

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms, { 'row_attr': { 'class': 'mt-3' } }) }}

            <div id="login-button-container" class="d-flex justify-content-center">
                <button type="submit" class="btn btn-lg btn-primary mt-3 w-50">Register</button>
            </div>
            {{ form_end(registrationForm) }}

            <div id="other-links" class="d-flex justify-content-center">
                <a href="{{ path('app_login') }}">I have an account already!</a>
            </div>
        </div>
    </div>
{% endblock %}
